<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="75sp"
        android:id="@+id/imageView"
        android:src="@drawable/europaplatz"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/berechnen1" />

    <TextView
        android:text="Campus Europaplatz: Am Europapl. 11,        74076 Heilbronn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView"
        android:layout_above="@+id/berechnen1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="75sp"
        android:id="@+id/imageView4"
        android:src="@drawable/kuenzelsau"
        android:layout_below="@+id/anzeigen1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp"
        android:layout_toStartOf="@+id/anzeigen1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="75sp"
        android:id="@+id/imageView5"
        android:src="@drawable/schwaebisch_hall"
        android:layout_below="@+id/button7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:layout_toStartOf="@+id/button7" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="75sp"
        android:id="@+id/imageView3"
        android:src="@drawable/campus_sontheim"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/berechnen1"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/berechnen1" />

    <TextView
        android:text="Campus Sontheim: Max-Planck-Straße 39        74081 Heilbronn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/anzeigen1"
        android:layout_toEndOf="@+id/imageView3" />

    <Button
        android:text="Route berechnen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:layout_alignBaseline="@+id/anzeigen1"
        android:layout_alignBottom="@+id/anzeigen1"
        android:layout_toEndOf="@+id/berechnen1"
        android:layout_marginStart="28dp" />

    <Button
        android:text="Route berechnen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button14"
        android:layout_alignBaseline="@+id/berechnen1"
        android:layout_alignBottom="@+id/berechnen1"
        android:layout_alignStart="@+id/button6" />

    <TextView
        android:text="Campus Künzelsau: Daimlerstraße 35         74653 Künzelsau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <Button
        android:text="Route berechnen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button12"
        android:layout_alignBaseline="@+id/button7"
        android:layout_alignBottom="@+id/button7"
        android:layout_alignStart="@+id/button6" />

    <TextView
        android:text="Standorte der HS Heilbronn"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Standort anzeigen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:layout_below="@id/textView5"
        android:layout_toEndOf="@+id/imageView5" />

    <Button
        android:text="Route berechnen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button12" />

    <Button
        android:text="Standort anzeigen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/berechnen1"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Standort anzeigen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/anzeigen1"
        android:layout_below="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <Button
        android:text="Standort anzeigen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:layout_below="@+id/textView8"
        android:layout_toEndOf="@+id/imageView4" />

    <TextView
        android:text="Campus Schwäbisch Hall: Ziegeleiweg 4      74523 Schwäbisch Hall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView5"
        android:layout_alignBottom="@+id/imageView5" />


</RelativeLayout>




</ScrollView>

